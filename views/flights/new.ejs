<%- include('../partials/header') %>
<a href="/">Home Screen</a> | <a href="/flights">Flights List</a>
<h1><%= title %></h1>
<form method="POST" action="/flights">
    <label>Airline:</label>
    <select name="airline">
        <option value="American">American</option>
        <option value="Southwest">Southwest</option>
        <option value="United">United</option>
    </select>
    <br>
    <label>Airport:</label>
    <select name="airport">
        <option value="AUS">AUS</option>
        <option value="DFW">DFW</option>
        <option value="DEN" selected>DEN</option>
        <option value="LAX">LAX</option>
        <option value="SAN">SAN</option>
    </select>
    <br>
    <label>Flight No:</label>
    <input type="number" min="10" max="9999" name="flightNo" value="10">
    <br>
    <label>Departure Date:</label>
    <input type="date" name="departs">
    <br>
    <input type="submit" value="Add Flight">
</form>
<%- include('../partials/footer') %>